<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
  
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <%= link_to "秘密のケーキ屋さん", root_path, class: "navbar-brand" %>
     
    
    <!--<% if current_customer %>
      <div style="color:white">ようこそ<%= current_customer.full_name %>さん</div>
    <% end %>-->
    
      <ul class="navbar-nav nav justify-content-end mr-sm-2">
        <% if customers_signed_in? %>
        <li class="nav-item">
            <%= link_to "マイページ"  customer_path(current_customer) %>
          </li>
          <li class="nav-item">
            <%= link_to "商品一覧" items_path %>
          </li>
          <li class="nav-item">
            <%= link_to "カート" cart_item_path %>
          </li>
          <li class= "nav-item">
            <%= link_to "ログアウト" destroy_costomer_session(current_customer) %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to "商品一覧" admin_items_path %>
          </li>
          <li class="nav-item">
            <%= link_to "会員一覧" admin_customers_path %>
          </li>
          <li class="nav-item">
            <%= link_to "注文履歴一覧" admin_order_show_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ジャンル一覧" admin_genres_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト" destroy_admin_sessions_path %>
          </li>
            <% end %>
        <% else %>
             <li class="nav-item">
            <%= link_to "About" homes_about_path %>
          </li>
          <li class="nav-item">
            <%= link_to "商品一覧" items_path %>
          </li>
          <li class="nav-item">
            <%= link_to "新規登録" new_costomer_session %>
          </li>
          <li class= "nav-item">
            <%= link_to "ログイン"　costomer_session　%>
          </li>
        <% end %>
      </ul>
    </nav>
  
</header>
  <div class="body">
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>