<div class="row">
  <div>
    <strong class="information-link"><h3>ショッピングカート</h3></strong>
    <%= link_to "カートを空にする", customers_all_destroy_path, method: :delete, class: "pull-right btn btn-danger" %>
  </div>
    <table>
     <thead>
      <tr class="info">
        <th>商品名</th>
        <th>単価（税込み）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
     </thead>
     <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td>¥<%= ((cart_item.item.price_without_tax * 1.1).floor).to_s(:delimited, delimiter: ',') %></td>
        <td>
            <%= form_for(cart_item, url: customers_cart_item_path(cart_item)) do |c| %>
            <p>
              <%= c.number_field :quantity, min:1, max:10000, step:1 %>
              <%= c.submit "変更", class: "btn btn-primary" %>
            </p>
            <% end %>
        </td>
        <td>
            ¥<%= ((cart_item.item.price_without_tax * cart_item.quantity * 1.1).floor).to_s(:delimited, delimiter: ',') %>
        </td>
        <td>
            <%= link_to "削除する", customers_cart_item_path(cart_item.id), method: :DELETE, class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
     </tbody>
    </table>
</div>
<div>
    <span>
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary", data: {"turbolinks" => false} %>
    </span>
</div>
<div>
    <table class="table table-bordered">
        <tr>
            <td><strong>合計金額</strong></td>
            <td>¥<%= @total_price.floor.to_s(:delimited, delimiter: ',') %></td>
        </tr>
    </table>
</div>
<div>
    <span>
        <%= link_to "情報入力に進む", customers_orders_about_path, class: "col-xs-12 btn btn-success"%>
    </span>
    </div>
</div>